<!-- Include header and Nav partials -->
<%- include('partials/header') %>
<body>
    <%- include('partials/nav') %>
    <main>
        <h1>Create an Event</h1>

        <% if(errors) { %>
        <p>
            <% for (let err of errors) { %>
            <%= err %> <br>
            <% }  %>
        </p>
        <% } %>

        <form id="create-event" method="post" action="/newConnection/post">
            <table id="create-event-table">
                <tr>
                    <th>
                        <label for="type">Type</label>
                    </th>
                    <td>
                        <input name="type" type="text" id="type" required placeholder="What Type of game?" />
                    </td>
                </tr>
                <tr>
                    <th>
                        <label for="game">Game</label>
                    </th>
                    <td colspan="2">
                        <input name="game" id="game" type="text" required placeholder="What game?" />
                    </td>
                </tr>
                <tr>
                    <th>
                        <label for="details">Details</label>
                    </th>
                    <td colspan="2">
                        <textarea name="details" id="details" required placeholder="Details of Event"></textarea>
                    </td>
                </tr>
                <tr>
                    <th>
                        <label for="location">Location</label>
                    </th>
                    <td colspan="2">
                        <input name="location" type="text" id="location" required placeholder="Location" />
                    </td>
                </tr>
                <tr>
                    <th>
                        <label for="time">Time</label>
                    </th>
                    <td colspan="2">
                        <input name="time" type="datetime-local" id="time" required />
                    </td>
                </tr>
            </table>
            <button type="submit">Create Event</button>
        </form>
    </main>

    <%- include('partials/footer') %>
</body>
</html>