<!DOCTYPE html>

<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<!-- Include header and Nav partials -->
<%- include('partials/header') %>
<body>
    <%- include('partials/nav') %>
    <main>
    <h1>Create an Event</h1>
    <form id="create-event" method="post" action="/newConnection">
        <table id="create-event-table">
            <tr>
                <td></td> <!--leave empty space-->
                <td>
                    <label for="card">Card Game</label>
                </td>
                <td>
                    <label for="board">Board Game</label>
                </td>
            </tr>
            <tr id="radio-row">
                <td></td> <!--Leave empty space-->
                <td>
                    <input type="radio" name="game-type" id="card" value="card" />
                </td>
                <td>
                    <input type="radio" name="game-type" id="board" value="board" />
                </td>
            </tr>
            <tr>
                <th>
                    <label for="game">Game</label>
                </th>
                <td colspan="2">
                    <input name="game" type="text" required placeholder="What game?" />
                </td>
            </tr>
            <tr>
                <th>
                    <label for="details">Details</label>
                </th>
                <td colspan="2">
                    <textarea name="details" required placeholder="Details of Event"></textarea>
                </td>
            </tr>
            <tr>
                <th>
                    <label for="location">Location</label>
                </th>
                <td colspan="2">
                    <input type="text" name="location" required placeholder="Location" />
                </td>
            </tr>
            <tr>
                <th>
                    <label for="time">Time</label>
                </th>
                <td colspan="2">
                    <input type="datetime-local" name="time" required />
                </td>
            </tr>
        </table>
        <button type="sumbit">Create Event</button>
    </form>
    </main>

    <%- include('partials/footer') %>
</body>
</html>